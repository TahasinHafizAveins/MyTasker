<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TaskDetailTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TaskTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
    </style>

    <style name="TIStyle">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/nonClickable</item>
        <item name="colorControlHighlight">@color/nonClickable</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
</resources>